<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IVitem"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            android:layout_width="90dp"
            android:foregroundGravity="center_vertical"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ligne1"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ligne2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/n_e_le"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item.date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="#212640"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/sex"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item.sexe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="#212640"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/ligne3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/karatra"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item.CIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212640"
            android:layout_marginEnd="20dp"
            android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ligne4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/asa"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item.asa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212640"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ligne5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/lot"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item.lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:textColor="#212640"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ligne6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bytel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/t_l_phone"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item.tel"
                android:layout_width="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>